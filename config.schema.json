{
  "pluginAlias": "PingTV",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "accessories": {
        "type": "array",
        "title": "Accessories",
        "items": {
          "type": "object",
          "title": "TV",
          "properties": {
            "accessory": {
              "title": "Accessory",
              "type": "string",
              "default": "PingTV",
              "readOnly": true
            },
            "name": {
              "title": "Name",
              "type": "string",
              "description": "The name of the TV accessory",
              "required": true
            },
            "ipAddress": {
              "title": "IP Address",
              "type": "string",
              "description": "The IP address of the TV",
              "required": true
            },
            "manufacturer": {
              "title": "Manufacturer",
              "type": "string",
              "description": "The manufacturer of the TV",
              "required": false
            },
            "model": {
              "title": "Model",
              "type": "string",
              "description": "The model of the TV",
              "required": false
            },
            "pingInterval": {
              "title": "Ping Interval",
              "type": "number",
              "description": "The interval (in milliseconds) between each ping to the TV",
              "default": 5000,
              "required": false
            }
          },
          "required": ["name", "ipAddress"]
        }
      }
    }
  }
}
